<Window x:Class="sysinfo_client.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sysinfo_client"
        mc:Ignorable="d"
        Title="Đăng Nhập Hệ Thống" Height="550" Width="800"
        Background="#FFFFFF" WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" ResizeMode="NoResize"
        Icon="images/logo.ico">
    <Window.Resources>
        <DropShadowEffect x:Key="CardShadow" ShadowDepth="3" Direction="270" Opacity="0.2" BlurRadius="10"/>
    </Window.Resources>
    <Border CornerRadius="10" BorderThickness="1" BorderBrush="#F2F2F2">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="1.5*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Brand/Logo Area -->
            <Border Grid.Column="0" Background="#D62300" CornerRadius="10,0,0,10">
                <Grid>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Image Source="images/logo-tank-food.png" Width="120" Height="120" Margin="0,0,0,30"/>
                        <TextBlock Text="GIÁM SÁT" FontWeight="Bold" FontSize="22" 
                                Foreground="White" HorizontalAlignment="Center"/>
                        <TextBlock Text="HỆ THỐNG" FontWeight="Bold" FontSize="22"
                                Foreground="White" HorizontalAlignment="Center" Margin="0,5,0,40"/>
                        <TextBlock Text="© 2025 TANK-Food" Foreground="#FFFFFF" FontSize="12"
                                HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,60,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Right Panel - Login Form -->
            <Grid Grid.Column="1" Margin="30">
                <!-- Close Button -->
                <Button x:Name="CloseButton" Width="30" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top"
                        Background="Transparent" BorderThickness="0" Cursor="Hand" Click="CloseButton_Click">
                    <TextBlock Text="✕" FontSize="16" Foreground="#333333" HorizontalAlignment="Center"/>
                </Button>

                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="ĐĂNG NHẬP" FontWeight="Bold" FontSize="28" 
                            Foreground="#FF8000" HorizontalAlignment="Left" Margin="0,0,0,10"/>

                    <TextBlock Text="Chào mừng bạn quay trở lại!" FontSize="16" 
                            Foreground="#333333" Margin="0,0,0,40"/>

                    <TextBlock Text="Địa chỉ email" FontSize="14" FontWeight="Medium" Foreground="#333333" Margin="0,0,0,8"/>
                    <Border BorderBrush="#F2F2F2" BorderThickness="1" CornerRadius="6" Margin="0,0,0,20" Background="#F2F2F2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="📧" FontSize="18" Margin="15,0,5,0" VerticalAlignment="Center" Foreground="#B01C00"/>
                            <TextBox x:Name="UsernameTextBox" Grid.Column="1" Height="45" FontSize="15" Padding="10,0" BorderThickness="0"
                                    Background="Transparent" VerticalContentAlignment="Center"/>
                        </Grid>
                    </Border>

                    <TextBlock Text="Mật khẩu" FontSize="14" FontWeight="Medium" Foreground="#333333" Margin="0,0,0,8"/>
                    <Border BorderBrush="#F2F2F2" BorderThickness="1" CornerRadius="6" Margin="0,0,0,30" Background="#F2F2F2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="🔒" FontSize="18" Margin="15,0,5,0" VerticalAlignment="Center" Foreground="#B01C00"/>
                            <PasswordBox x:Name="PasswordBox" Grid.Column="1" Height="45" FontSize="15" Padding="10,0" BorderThickness="0"
                                        Background="Transparent" VerticalContentAlignment="Center"/>
                        </Grid>
                    </Border>

                    <Button x:Name="LoginButton" Content="ĐĂNG NHẬP" Height="50" 
                            HorizontalAlignment="Stretch" Click="LoginButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#FF8000"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontSize" Value="16"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FF9A3D"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#D62300"/>
                                                </Trigger>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter Property="Background" Value="#BBBBBB"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <TextBlock HorizontalAlignment="Center" Margin="0,20,0,0">
                        <Hyperlink NavigateUri="ForgotPassword.xaml" Foreground="#D62300" TextDecorations="None">
                            Quên mật khẩu?
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>